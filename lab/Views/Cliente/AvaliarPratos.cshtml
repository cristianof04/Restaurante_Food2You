@model lab.Models.AvaliarPratos

@{
    @using Microsoft.AspNetCore.Http
    ViewData["Title"] = "AvaliarPratos";
    int IdPrato = Convert.ToInt32(ViewBag.IdPrato);
    ViewBag.IdPrato = IdPrato;
    var NomeClientes = ViewBag.NomeClientes as string[];
    ViewBag.NomeClientes = NomeClientes;
}

<h1>Avaliar Pratos</h1>

<br />

<div id="partialviews">

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/jscript">

    $(document).ready(function () {
        $("#partialviews").load('/Cliente/MostrarAvaliacoesPratos');
    });
</script>

<br />

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AvaliarPratos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.jaAvaliouP == null && Context.Session.GetString("Role") == "Cliente")
            {
                <div class="form-group">
                    <label asp-for="Avaliacao" class="control-label"></label>

                    <select asp-for="Avaliacao" class="form-control">

                        <option value="1 ">1 Estrela</option>
                        <option value="2 ">2 Estrelas</option>
                        <option value="3 ">3 Estrelas</option>
                        <option value="4 ">4 Estrelas</option>
                        <option value="5 ">5 Estrelas</option>
                    </select>
                    <span asp-validation-for="Avaliacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label"></label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" name="Id" value="@IdPrato" class="btn btn-primary">Avaliar</button>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-controller="Restaurante" asp-action="Menu">Retrodecer</a>
</div>

