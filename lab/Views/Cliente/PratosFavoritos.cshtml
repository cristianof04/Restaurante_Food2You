@model IEnumerable<lab.Models.PratoDia>
@{ 
    int i = 0;
    var IdPratos = ViewBag.Message as int[];
    var NomeRestaurantes = ViewBag.NomeRestaurantes as string[];
}
<h4>Pratos Favoritos</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome do Restaurante
            </th>
            <th>
                Nome do Prato
            </th>
            <th>
                Tipo
            </th>
            <th>
                Preço
            </th>
            <th>
                Descrição
            </th>
            <th>
                Foto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (IdPratos != null)
            {
                if (IdPratos.Contains(Convert.ToInt32(item.Id)))
                {
                    for (i = 0; i < IdPratos.Length; i++)
                    {
                        <tr>
                            <td>
                                @NomeRestaurantes[i]
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Preco) €
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                <img src="~/Img/@Html.DisplayFor(modelItem => item.Foto)" height="100" width="100" />
                            </td>
                        </tr>
                    }
                }
            }
        }
        </tbody>
</table>
